<% version = line_sidebar %>
<%# if we get passed in object here we can avoid hitting the database again %>
<% object ||= version.inv_object %>
<% if has_object_permission?(object, 'download') then %>
  <%= link_to "Version #{version.number}",
              :controller => :version,
              :action     => :index,
              :object     => object,
              :version    => version %>:
<% else %>
  Version <%= version.number %>:
<% end %>
<%= merritt_time(version.created) %>
<br/>
