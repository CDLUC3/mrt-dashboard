<%# the following must be passed in
  files = files to display
  obj = metadata obj
  stored_object = Information about object storage
  version = version of the stored object
%>

<h3><%=title%></h3>
<div class ="files">
  <% files.each do |file| %>
    <div class="key">
      <%=link_to(File.basename(file.identifier),
          :controller => :file, :action => :display,
          :group => params[:group], :object => params[:object],
          :version => params[:version], :file => file.identifier)
          %></div>
    <div class="value">
      <%= file[Mrt::File.mediaType].to_s.gsub(/;.*$/, '') %>
      <%=number_to_storage_size(file[Mrt::Base.size].to_s.to_i)%>
    </div>

  <% end %>
</div>
<div class="clear"></div>
