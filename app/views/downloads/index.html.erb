<div class="home">
  <main class="home">
    <section>
        <h1>
          <img class="merritt-logo" src="/images/logos/merritt-logo.svg" alt="Merritt"/>
        </h1>
        <h2>Merritt Single Download</h2>
        <hr/>
        <h2>Merritt Download Tables</h2>
        <div>
          <button onclick="javscript:clearData()">Clear Downloads</button>
          <button onclick="javscript:showTable()">Show Table</button>
        </div>
        <div class="merritt_downloads">
          <table class="merritt_downloads">
            <thead>
            <tr class="header">
              <th>Key</th>
              <th>Title</th>
              <th>Expected Availability</th>
              <th>Expires</th>
              <th>Size</th>
              <th>Check Count</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
    </section>

  </main>
</div>
