<% content_for(:title) do %>
  Merritt State
<% end %>

<% content_for(:extra_head) do %>
<!-- Merritt monitoring test code. Please do not remove this comment since
it will cause the monitoring scripts to fail.

 - served at <%= Time.new %>

 - monitoring string SwuV4tac

-->
<% end %>

<div class="home">
  <main class="home" id="maincontent">
    <h1 class="state"><%= APP_VERSION %></h1>
    <div>
      <table class="state">
        <caption>Statistics for <%= @datestr %></caption>
        <thead>
        <tr>
          <th>Title</th>
          <th>Total</th>
          <th>Completed</th>
          <th>Started</th>
          <th>Error</th>
        </tr>
        </thead>
        <tbody>
          <% @count_by_status.each do |row| %>
            <tr class="<%= row[0] %>">
              <th class="title"><%= row[1] %></th>
              <td class="total"><%= row[2] %></td>
              <td class="completed"><%= row[3] %></td>
              <td class="started"><%= row[4] %></td>
              <td class="error"><%= row[5] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </main>
</div>
