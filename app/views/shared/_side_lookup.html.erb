<section class="lookup">
<% if group_choosen? %>
  <h3>Object Lookup</h3>
  <%= form_tag({:controller => 'collection', :action => 'search_results'}, :method => :get) do %>
    <%= text_field_tag 'terms', params[:terms] %>
    <%= hidden_field_tag 'group', session[:group_id] %>
    <%= submit_tag('Go') %>

    <p>
      <label for="terms">Search object author, title, date, file name or identifier.</label>
    </p>
    <ul>
      <li>exact match on local identifier</li>
      <li>exact match on file name</li>
      <li>text search of metadata (title, author, date)</li>
    </ul>
  <% end %>
<% end %>
</section>
