<% file = line_sidebar %>
<li style="word-wrap:break-word;">
<% if have_permission('download') then %>
  <%= link_to File.basename(file.identifier),
          :controller       => :file,
          :action           => :display,
          :group            => params[:group],
          :object           => params[:object],
          :version          => version.identifier,
          :file             => file.identifier %>
 <% else %>
	 <%= File.basename(file.identifier) %>
 <% end %>
</li>
